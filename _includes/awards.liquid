<div class="awards">
  {% assign awards = site.awards | reverse %}
  {% if awards.size > 0 %}
    <div class="table-responsive" {% if include.limit and site.awards.scrollable and awards.size > 3 %} style="max-height: 60vw" {% endif %}>
      <table class="table table-sm table-borderless">
        {% if include.limit and site.awards.limit %}
          {% assign awards_limit = site.awards.limit %}
        {% else %}
          {% assign awards_limit = awards.size %}
        {% endif %}
        {% for award in awards limit: awards_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ award.date | date: '%Y-%m' }}</th>
            <td>{{ award.content | markdownify | strip_html | strip_newlines | remove: '---' }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No awards to display...</p>
  {% endif %}
</div>
